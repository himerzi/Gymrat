<h1><%= "Listing #{@climbing_centre.name} walls" %></h1>

<%= will_paginate @walls %>

<table>
  <tr>
	<th>Vote Points</th>
	<th>Wall Number</th>
    <th>Kind</th>
    <th>Grade</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @walls.each do |wall| %>
  <tr>
	<td><%= wall.pt %></td>
	<td><%= wall.number %></td>
    <td><%= wall.kind %></td>
    <td><%= wall.grade %></td>
    <td><%= link_to 'Show', climbing_centre_wall_path(@climbing_centre,wall) %></td>
    <td><%= link_to 'Vote Up !', vote_up_climbing_centre_wall_path(wall.climbing_centre, wall) %></td>
    <td><%= link_to 'I climbed it', climbed_it_climbing_centre_wall_path(wall.climbing_centre, wall) %></td>
    <td><%= link_to 'Edit', edit_climbing_centre_wall_path(wall.climbing_centre, wall) %></td>
    <td><%= link_to 'Destroy', climbing_centre_wall_path(wall.climbing_centre, wall), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Wall', new_climbing_centre_wall_path(@climbing_centre) %>

<%= link_to 'Edit', edit_climbing_centre_path(@climbing_centre) %> |
<%= link_to 'Back', climbing_centres_path %>
